<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<definition name="base.definition" template="/views/tiles/layout.jsp">
		<put-attribute name="header" value="/views/tiles/header.jsp"></put-attribute>
		<put-attribute name="footer" value="/views/tiles/footer.jsp"></put-attribute>
		<put-attribute name="body" value=""></put-attribute>
	</definition>

	<definition name="company-*" extends="base.definition">
		<put-attribute name="body" value="/views/company/{1}.jsp"></put-attribute>
		<put-attribute name="title" value="Company {1}"></put-attribute>
	</definition>
	<definition name="/" extends="base.definition">
		<put-attribute name="body" value="/home.jsp"></put-attribute>
		<put-attribute name="title" value="Home"></put-attribute>
	</definition>
	<definition name="" extends="base.definition">
		<put-attribute name="body" value="/home.jsp"></put-attribute>
		<put-attribute name="title" value="Home"></put-attribute>
	</definition>
</tiles-definitions>